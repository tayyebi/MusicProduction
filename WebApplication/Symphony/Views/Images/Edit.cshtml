@model MusicProduction.Models.Image
@{
    ViewBag.Title = "به روز رسانی تصویر";
}
@Html.ActionLink("بازگشت", "Index")
<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <label for="Name">نام</label>
    <input type="text" name="Name" value="@Model.عکس" />

    <label for="Description">درباره</label>
    <input type="text" name="Description" value="@Model.توضیحات" />

    <label for="SubGroup">محصول</label>
    @Helpers.Products("Product")

    <label for="SubGroup">پست</label>
    @Helpers.Posts("Post")

    <label for="Parvandeh">پرونده</label>
    <p>
        اگر قصد به روز رسانی اصل فایل را ندارید، آن را بدون تغییر رها کنید.
    </p>
    <input type="file" name="Parvandeh" />

    <input type="submit" value="به روز رسانی" />
</form>