@model IEnumerable<MusicProduction.Models.Order>
@{
    ViewBag.Title = "سفارشات جدید";
}
@Html.ActionLink("سفارشات قبلی", "PrevOrders", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.محصول)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.زیر_گروه)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.مقدار)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.نام_و_نام_خانوادگی)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.پست_الکترونیک)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.موبایل)
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.محصول)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.زیر_گروه)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.مقدار)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.نام_و_نام_خانوادگی)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.پست_الکترونیک)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.موبایل)
            </td>
            <td>
                @Html.ActionLink("مشاهده", "Details", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
            </td>
        </tr>
    }
</table>
