@model IEnumerable<MusicProduction.Models.Post>
@{
    ViewBag.Title = "پست ها";
}
@Html.ActionLink("ایجاد", "Create", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
<table> 
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.عنوان)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.تاریخ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.زیر_گروه)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.گروه)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.عنوان)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.تاریخ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.زیر_گروه)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.گروه)
            </td>
            <td>
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
                @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
                @Html.ActionLink("تصویر ها", "Index", new { Post = item.Id, controller = "Images" }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
            </td>
        </tr>
    }
</table>
